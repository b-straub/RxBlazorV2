@inherits ObservableComponent<CrossComponentCommunicationModel>

<MudCard>
    <MudCardHeader>
        <CardHeaderContent>
            <MudText Typo="Typo.h6">Component 1 - Counter Controls</MudText>
        </CardHeaderContent>
    </MudCardHeader>
    <MudCardContent>
        <MudStack Spacing="3">
            <MudAlert Severity="Severity.Info">
                Counter: @Model.SharedCounter
            </MudAlert>

            <MudStack Row="true" Spacing="2">
                <MudButton
                    Variant="Variant.Filled"
                    Color="Color.Success"
                    OnClick="@(() => Model.IncrementCommand.Execute())"
                    StartIcon="@Icons.Material.Filled.Add">
                    Increment
                </MudButton>

                <MudButton
                    Variant="Variant.Filled"
                    Color="Color.Error"
                    Disabled="@(!Model.DecrementCommand.CanExecute)"
                    OnClick="@(() => Model.DecrementCommand.Execute())"
                    StartIcon="@Icons.Material.Filled.Remove">
                    Decrement
                </MudButton>

                <MudButton
                    Variant="Variant.Outlined"
                    Color="Color.Warning"
                    OnClick="@(() => Model.ResetCommand.Execute())"
                    StartIcon="@Icons.Material.Filled.Refresh">
                    Reset
                </MudButton>
            </MudStack>
        </MudStack>
    </MudCardContent>
</MudCard>
