@page "/test"
@using RxBlazorV2Sample.Components
@using RxBlazorV2Sample.HelperModel
@inherits ObservableComponent<AnotherGenericModel<string, int>>

<PageTitle>Generic Test</PageTitle>

<MudStack>
    <MudTable Items="@Model.Tlist" Hover="true" Breakpoint="Breakpoint.Sm" LoadingProgressColor="Color.Info">
        <HeaderContent>
            <MudTh>String Items</MudTh>
        </HeaderContent>
        <RowTemplate>
            <MudTd DataLabel="String Items">@context</MudTd>
        </RowTemplate>
    </MudTable>

    <MudTable Items="@Model.Plist" Hover="true" Breakpoint="Breakpoint.Sm" LoadingProgressColor="Color.Info">
        <HeaderContent>
            <MudTh>Items</MudTh>
        </HeaderContent>
        <RowTemplate>
            <MudTd DataLabel="Int Items">@context</MudTd>
        </RowTemplate>
    </MudTable>
    
    <MudStack Row="true">
        <MudButton @onclick=@(() => Model.AddToTList.Execute(Random.Shared.Next().ToString()))
                   Disabled=@(!Model.AddToTList.CanExecute)
                   Variant="Variant.Filled" Color="Color.Primary">
            Add to TList
        </MudButton>
        
        <MudButton @onclick=@(() => Model.ClearTList.Execute()) 
                   Disabled=@(!Model.ClearTList.CanExecute)
                   Variant="Variant.Filled" Color="Color.Error">
            Clear TList
        </MudButton>

        <MudButton @onclick=@(() => Model.AddToPList.Execute(Random.Shared.Next()))
                   Disabled=@(!Model.AddToPList.CanExecute)
                   Variant="Variant.Filled" Color="Color.Primary">
            Add to PList
        </MudButton>
        
        <MudButton @onclick=@(() => Model.ClearPList.Execute()) 
                   Disabled=@(!Model.ClearPList.CanExecute)
                   Variant="Variant.Filled" Color="Color.Error">
            Clear PList
        </MudButton>
    </MudStack>
    
    <ExternalModelChild />
</MudStack>
