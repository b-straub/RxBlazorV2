@page "/counter2"
@inherits CounterModelComponent
<PageTitle>Counter</PageTitle>

<MudText Typo="Typo.h3" GutterBottom="true">Counter</MudText>

<MudAlert Severity="Severity.Info" Class="mt-4 mb-4">Current count 2: @Model.Counter2</MudAlert>
<MudAlert Severity="Severity.Info" Class="mt-4 mb-4">Current count 3: @Model.Counter3</MudAlert>

<MudButton Variant="Variant.Filled" Color="Color.Primary" Disabled=@(!Model.AddAsync2.CanExecute || Model.AddAsync2.Executing)
                      @onclick=@(async _ => await Model.AddAsync2.ExecuteAsync(2))>Add</MudButton>

<MudButton Variant="Variant.Filled" Color="Color.Primary" Disabled=@(!Model.AddCombined.CanExecute  || Model.AddCombined.Executing)
                      @onclick=@(async _ => await Model.AddCombined.ExecuteAsync(4))>Add combined</MudButton>

